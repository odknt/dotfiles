# Global properties
#
# The top properties below are applied to every block, but can be overridden.
# Each block command defaults to the script name to avoid boilerplate.
command=/usr/lib/i3blocks/$BLOCK_NAME
separator=false
separator_block_width=5
markup=none
border_top=0
border_left=0
border_right=0
border_bottom=4

[title]
command="$HOME/scripts/title.sh"
markup=pango
signal=10
interval=persist
border=#bfa898

[updates]
command="$HOME/scripts/updates.sh"
interval=60
signal=3
urgent=true

# Volume indicator
#
# The first parameter sets the step (and units to display)
# The second parameter overrides the mixer selection
# See the script for details.
[volume]
label=  
command=[[ -z "${BLOCK_BUTTON}" ]] || ( [[ "${BLOCK_BUTTON}" == "1" ]] && ((pavucontrol -t 3 --name "pavucontrol-bar" || true) && $HOME/scripts/volume_control.py signal) || $HOME/scripts/volume_control.py toggle ); $HOME/scripts/volume_control.py i3blocks
instance=Master
markup=pango
interval=5
signal=4
border=#cc241d

# Memory usage
#
# The type defaults to "mem" if the instance is not specified.
[memory]
label=  
command=echo "$(/usr/lib64/i3blocks/memory | sed -e 's/$/ /')"
separator=false
interval=10
border=#d79921

# Disk usage
#
# The directory defaults to $HOME if the instance is not specified.
# The script may be called with a optional argument to set the alert
# (defaults to 10 for 10%).
[disk]
label=  
command=echo "$(/usr/lib64/i3blocks/disk | sed -e 's/$/ /')"
#instance=/mnt/data
interval=30
border=#b16286

# Network interface monitoring
#
# If the instance is not specified, use the interface used for default route.
# The address can be forced to IPv4 or IPv6 with -4 or -6 switches.

[wifi]
#instance=wlp3s0
interval=10
separator=false

# CPU usage
#
# The script may be called with -w and -c switches to specify thresholds,
# see the script for details.
[cpu_usage]
label=  
command=echo "$(/usr/lib64/i3blocks/cpu_usage | sed -e 's/$/ /')"
interval=5
border=#98971a
#separator=false

[temperature]
label=  
command=echo "$("$HOME/scripts/temperature.sh") "
interval=5
border=#458588

#[load_average]
#interval=10

# GPU Temperature
#
# The battery instance defaults to 0.
[battery]
label=  
interval=30

# Battery indicator
#
# The battery instance defaults to 0.
[gputemp]
command="$HOME/scripts/gputemp.sh"
border=#a16946
interval=5

# Date Time
#
[time]
label=  
command=date '+%Y/%m/%d %H:%M'
command=echo "$(date '+%Y/%m/%d %H:%M') "
interval=1
border=#928374
separator_block_width=0

