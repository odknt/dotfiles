######################################################################
# Prompt
######################################################################
prompt_vim() {
  test -n "${VIMRUNTIME}" \
  && echo -n "\033[31m(vim)\033[0m "
}

prompt() {
  prompt_vim

  # default
  if (( USER_ID )); then
    print \$
  else
    print \#
  fi
}

PS1="$(prompt) "

######################################################################
# Aliases
######################################################################
alias ls='ls -F --color'
alias enja='trans en:ja'
alias jaen='trans ja:en'
alias mutt='(cd ~/attachments && mutt)'

######################################################################
# Keybingdings
######################################################################
set -o emacs -o utf8-mode

bind '^L'=clear-screen
