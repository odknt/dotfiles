# http://editorconfig.org
root = true

############################################################################
## Default
############################################################################
[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 4
tab_width = 4

[Makefile]
indent_style = tab
max_line_length = 80

[*.md]
trim_trailing_whitespace = false

[*.csv]
insert_final_newline = false

[*.sh]
indent_size = 2
max_line_length = 80

[*.tf]
indent_size = 2

[PKGBUILD]
indent_size = 2

[*.{c,h}]
indent_style = tab

[*.{hpp,cc,cpp}]
indent_size = 2
max_line_length = 80

[*.{php}]
max_line_length = 120

[*.{go,s,S}]
indent_style = tab

[*.{html,htm,tmpl,tpl,css,less,scss,js,ts,jsx,coffee,yml,yaml,toml,json,tag,slim,vue}]
indent_size = 2

[*.bat]
end_of_line = crlf
indent_style = tab
tab_width = 8
