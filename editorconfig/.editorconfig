# http://editorconfig.org
root = true

############################################################################
## Default
############################################################################
[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 2
tab_width = 2

[Makefile]
indent_style = tab
max_line_length = 80

[*.md]
indent_size = 4
tab_width = 4
trim_trailing_whitespace = false

[*.csv]
insert_final_newline = false

[*.{sh,bash}]
max_line_length = 80

[*.py]
indent_size = 4
max_line_length = 80

[*.{c,h}]
indent_style = tab

[*.{hpp,cc,cpp}]
max_line_length = 80

[*.{php}]
max_line_length = 120

[*.{go,s,S}]
indent_style = tab
indent_size = 4
tab_width = 4

[*.bat]
end_of_line = crlf
indent_style = tab
tab_width = 8
