!-----------------------------------------------------------
! Xterm
!-----------------------------------------------------------

XTerm*utf8:                             1
XTerm*locale:                           true
XTerm*cjkWidth:                         true
XTerm*saveLine:                         2000
XTerm*allowBoldFonts:                   false
XTerm*charClass:                        33:48,35:48,37:48,43:48,45-47:48,64:48,95:48,126:48
XTerm*faceName:                         tamsyn:pixelsize=12:antialias=false
XTerm*faceNameDoublesize:               pixelmplus10:pixelsize=10:antialias=false:spacing=0

!-----------------------------------------------------------
! URxvt
!-----------------------------------------------------------

URxvt*perl-ext-common:                  default,clipboard,url-select,keyboard-select,xim-onthespot
URxvt*url-select.underline:             true
URxvt*keysym.M-u:                       perl:url-select:select_next
URxvt*keysym.M-Escape:                  perl:keyboard-select:activate
URxvt*keysym.M-s:                       perl:keyboard-select:search
URxvt.skipBuiltinGlyphs:                false
URxvt*scrollBar:                        false
URxvt*font:                             xft:tamsyn:pixelsize=12:antialias=false:spacing=1,xft:pixelmplus10:pixelsize=10:antialias=false:spacing=1,xft:symbola:pixelsize=12
URxvt*boldFont:                         xft:tamsyn:pixelsize=12:antialias=false:spacing=1,xft:pixelmplus10:pixelsize=10:antialias=false:spacing=1,xft:symbola:pixelsize=12
URxvt*inputMethod:                      uim
URxvt*imLocale:                         ja_JP.UTF-8
URxvt*imFont:                           xtf:sans-serif:regular:pixelsize=12:antialias=true
URxvt*allow_bold:                       false
URxvt*preeditType:                      OnTheSpot
URxvt*perl_ext:                         xim-onthespot
URxvt*skipBuiltinGlyphs:                false
URxvt*lineSpace:                        -5
URxvt*letterSpace:                      0

!------------------------------------------------------------
! Emacs
!------------------------------------------------------------

Emacs.FontBackend:                      xft
Emacs.font:                             tamsyn:bold:pixelsize=12,pixelmplus10:regular:pixelsize=10,symbola:pixelsize=12
Emacs.useXIM:                           true
