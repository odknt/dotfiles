!-----------------------------------------------------------
! Xterm
!-----------------------------------------------------------

XTerm*utf8:                             1
XTerm*locale:                           true
XTerm*cjkWidth:                         true
XTerm*saveLine:                         2000
XTerm*allowBoldFonts:                   false
XTerm*charClass:                        33:48,35:48,37:48,43:48,45-47:48,64:48,95:48,126:48
XTerm*faceName:                         Monospace:size=9
XTerm*faceNameDoublesize:               Monospace:size=9

!-----------------------------------------------------------
! URxvt
!-----------------------------------------------------------

URxvt*perl-ext-common:                  default,xim-onthespot
URxvt*url-select.underline:             true
URxvt*keysym.M-u:                       perl:url-select:select_next
URxvt*keysym.M-Escape:                  perl:keyboard-select:activate
URxvt*keysym.M-s:                       perl:keyboard-select:search
URxvt.skipBuiltinGlyphs:                false
URxvt*scrollBar:                        false
URxvt*font:                             xft:Monospace:size=9,xft:Symbola:size=9
URxvt*boldFont:                         xft:Monospace:bold:size=9,xft:Symbola:bold:size=9
URxvt*inputMethod:                      uim
URxvt*imLocale:                         ja_JP.UTF-8
URxvt*imFont:                           xtf:Monospace:size=9
URxvt*allow_bold:                       false
URxvt*preeditType:                      OnTheSpot
URxvt*perl_ext:                         xim-onthespot
URxvt*skipBuiltinGlyphs:                false
URxvt*lineSpace:                        0
URxvt*letterSpace:                      0
URxvt*scrollTtyOutput:                  false
URxvt*scrollWithBuffer:                 true
URxvt*scrollTtyKeypress:                true

! Xterm escapes, word by word movement
URxvt.keysym.Control-Left:              \033[1;5D
URxvt.keysym.Control-Right:             \033[1;5C

!------------------------------------------------------------
! Emacs
!------------------------------------------------------------

Emacs.FontBackend:                      xft
Emacs.font:                             xft:Monospace:size=9,xft:Symbola:size=9
Emacs.useXIM:                           true
