style "gvim"
{
    bg[NORMAL] = "#232c31"
}
widget "vim-main-window.*GtkForm" style "gvim"

style "no-resize-handle"
{
    GtkWindow::resize-grip-height = 0
    GtkWindow::resize-grip-width = 0
}
class "GtkWidget" style "no-resize-handle"

style "menu"
{
    engine "murrine"
    {
        menustyle = 0
        menuitemstyle = 1
    }
}
