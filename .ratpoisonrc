startup_message off

escape M-w

alias titlebar exec sleep 0.1; ratpoison -c "exec conky -c $HOME/.ratpoison/scripts/conky_dzen2_title | dzen2 -e - -h '20' -bg '#2d2d2d' -ta l -geometry 800x20+1280+0 -fn 'Rounded M+ 1m:size=10'; true"
alias bar exec pkill dzen2; pkill conky; ratpoison -c "exec conky -c $HOME/.ratpoison/scripts/conky_dzen2 | dzen2 -e - -h '20' -ta r -geometry 1920x20+1280+0 -fn 'Rounded M+ 1m:size=10'; true" -c "titlebar"
alias tray exec pkill stalonetray; stalonetray --geometry 6x1+2860+0 --kludges=fix_window_pos -bg '#101010' -i 20 --slot-size 20 --window-type dock
alias reload exec ratpoison -c "source $HOME/.ratpoisonrc"
alias runonce exec $HOME/.ratpoison/bin/runonce

unmanage tray
unmanage stalonetray

set warp off
set border 1
set barborder 0
set bargravity se
set fwcolor \#992244
set fgcolor \#dddddd
set bgcolor \#8e227d
defpadding 0 20 0 0
set barpadding 20 10

bind q exec cyberfox
bind c exec urxvt

definekey top s-C-r reload

definekey top M-n next
definekey top M-p prev

definekey top M-d exec dmenu_run
definekey top s-k nextscreen
definekey top s-j prevscreen
definekey top s-f fselect
definekey top M-Tab fselect

definekey top M-1 exec rpws 1
definekey top M-2 exec rpws 2
definekey top M-3 exec rpws 3
definekey top M-4 exec rpws 4
definekey top M-5 exec rpws 5
definekey top M-6 exec rpws 6

definekey top M-h focusleft
definekey top M-j focusdown
definekey top M-k focusup
definekey top M-l focusright

runonce twmnd
runonce gol
runonce xcompmgr -CFa

# exec nitrogen --restore

bar
exec sleep 0.5; ratpoison -c 'tray'

compat
